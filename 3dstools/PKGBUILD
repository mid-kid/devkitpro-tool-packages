pkgname=3dstools
pkgver=1.3.0
pkgrel=1
arch=(any)
source=($pkgname-$pkgver.tar.gz::https://github.com/devkitPro/3dstools/archive/refs/tags/v$pkgver.tar.gz)

prepare() {
    cd $srcdir/$pkgname-$pkgver
    ./autogen.sh
    ./configure --prefix="$DEVKITPRO/tools"
}

build() {
    cd $srcdir/$pkgname-$pkgver
    make
}

package() {
    cd $srcdir/$pkgname-$pkgver
    make DESTDIR=$pkgdir install
}

sha256sums=('b2a9bc8ca37f868ef86ae3082f568ce804607f8bb986b797478cb71732ed8b2c')
